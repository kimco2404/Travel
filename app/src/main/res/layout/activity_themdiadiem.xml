<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_collapseMode="pin"
            app:layout_scrollFlags="enterAlways|scroll"/>

    </android.support.design.widget.AppBarLayout>

    <EditText
        android:id="@+id/txtId"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Id địa điểm" />

    <EditText
        android:id="@+id/txtTinh"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập Id tỉnh" />

    <EditText
        android:id="@+id/txtTen"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Tên địa điểm" />

    <EditText
        android:id="@+id/txtThongTin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Thông Tin" />

    <EditText
        android:id="@+id/txtDuongDi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Đường đi" />

    <EditText
        android:id="@+id/txtMachNho"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Mách nhỏ" />


    <EditText
        android:id="@+id/txtHinhDaiDien"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Hình đại diện" />

    <EditText
        android:id="@+id/txtSoGocChup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Số góc chụp" />

    <EditText
        android:id="@+id/txtThoiDiem"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Thời điểm" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnThem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:onClick="display"
            android:text="Thêm" />

        <Button
            android:id="@+id/btnReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:onClick="display"
            android:text="Nhập lại" />
    </LinearLayout>

</LinearLayout>

